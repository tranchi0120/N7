<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="8dp"
                android:id="@+id/hinh1"
                android:paddingRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/login" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/usernameWrapper"
                app:counterEnabled="true"
                app:errorEnabled="true"
                android:layout_toRightOf="@+id/hinh1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:textColor="#000"
                    android:textColorHint="#F8F5F5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/botron123"
                    android:hint="Gmail/Số điện thoại"/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/hinh2"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_pass"/>
            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="#fff"
                android:layout_toRightOf="@id/hinh2"
                android:layout_width="match_parent"
                app:passwordToggleEnabled="true"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botron123"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:textColorHint="#F8F5F5" />
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>


        <Button
            android:id="@+id/signin"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="#000"
            android:background="@drawable/botron"/>
        <Button
            android:id="@+id/dk"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng Ký"
            android:textColor="#000"
            android:background="#B3AFAF"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Gmail"
                android:textColor="#FDFCFC"
                android:background="@drawable/botron2"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textColor="@null"
                android:layout_weight="1"/>
            <Button
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="FaceBook"
                android:textColor="#FDFCFC"
                android:background="@drawable/botron3"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/forgot"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password"
            android:textSize="20sp"
            android:textColor="#EE4E2E"/>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have account?"
                android:textSize="20sp"
                android:textColor="#60605F"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:id="@+id/boqua"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Sign Up Now"
                android:textSize="20sp"
                android:textColor="#60605F"/>
        </LinearLayout>



    </RelativeLayout>


</LinearLayout>