<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.Myaccount">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#ee4e2e"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="150dp"

                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/button6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="138dp"
                        android:background="@drawable/shopee12"
                        />
                    <ImageButton
                        android:id="@+id/button7"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/shopee13"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_baseline_account"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:text="Nhóm 7"
                            android:textSize="20dp"/>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:text="Người theo dõi: 10000"
                            android:textSize="15dp"/>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="#fff"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">
                    <ImageButton
                        android:id="@+id/button1"
                        android:background="@drawable/toi1"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Trang chính"
                        android:textAlignment="center"
                        android:textColor="#000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">
                    <ImageButton
                        android:id="@+id/button2"
                        android:background="@drawable/toi2"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Mã giảm giá"
                        android:textAlignment="center"
                        android:textColor="#000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">
                    <ImageButton
                        android:id="@+id/button3"
                        android:background="@drawable/toi3"
                        android:layout_width="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="60dp"

                        android:gravity="center" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="FreeShip"
                        android:textAlignment="center"
                        android:textColor="#000"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">
                    <ImageButton
                        android:id="@+id/button4"
                        android:background="@drawable/toi4"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        android:gravity="center" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Săn sale"
                        android:textAlignment="center"
                        android:textColor="#000"
                        />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="#fff"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">
                    <ImageButton
                        android:id="@+id/button10"
                        android:background="@drawable/toi5"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Xác nhận"
                        android:textAlignment="center"
                        android:textColor="#000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">
                    <ImageButton
                        android:id="@+id/button11"
                        android:background="@drawable/toi6"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Lấy hàng"
                        android:textAlignment="center"
                        android:textColor="#000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">
                    <ImageButton
                        android:id="@+id/button12"
                        android:background="@drawable/toi7"
                        android:layout_width="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="60dp"

                        android:gravity="center" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Đang giao"
                        android:textAlignment="center"
                        android:textColor="#000"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">
                    <ImageButton
                        android:id="@+id/button13"
                        android:background="@drawable/toi8"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        android:gravity="center" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Đánh giá"
                        android:textAlignment="center"
                        android:textColor="#000" />
                </LinearLayout>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ListView
                    android:layout_below="@+id/headerBottom"
                    android:id="@+id/listviewCauthu"
                    android:layout_width="match_parent"
                    android:layout_height="700dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:background="#fff"/>

            </LinearLayout>




        </LinearLayout>

    </ScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/background"
        app:itemBackground="@color/background"
        app:itemTextColor="@color/colorTextPrimary"
        app:itemIconTint="@color/colororange"
        app:menu="@menu/menumain"
        android:layout_alignParentBottom="true">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>